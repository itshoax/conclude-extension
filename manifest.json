{
  "manifest_version": 3,
  "name": "YouTube Conclude",
  "version": "2.0.0",
  "description": "Summarize and conclude the current YouTube video using GPT.",
  "permissions": ["tabs", "activeTab"],
  "host_permissions": ["https://www.youtube.com/*"],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Conclude this video"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
